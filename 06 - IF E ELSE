        {
            
            //if
            
                int a = 10;
            
            if(a == 5)
            {
                Console.WriteLine("a = 5");           
            }
            else{
                Console.WriteLine("a <> 5");
            }
            
            //Pode se usar com ou sem {} 
            
            
            if(a == 5)
            
